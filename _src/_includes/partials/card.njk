<figure class="ma-card">
  {% image post.data.thumbnail, post.data.thumbnailAlt %}
  <figcaption>
    <p><date class="ma-text-subdued ma-text-medium">
      {{ post.date | postDate }}
    </date></p>
    <h3 class="ma-heading-4"><a href="{{ post.url }}">
      {{ post.data.title }}
    </a></h3>
    <p>{{ post.data.description }}</p>
  </figcaption>
</figure>